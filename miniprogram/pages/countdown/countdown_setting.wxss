/* miniprogram/pages/countdown/countdown_setting.wxss */
.preview{
  font-size: 20px;
  padding: 10px 20px;
  margin: 20px auto;
  border-radius: 10%;
}
.color_section{
  width: 90%;
}
.color_wrap{
  margin:10px auto;
}
.color_options{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.color_title{
  margin-bottom: 8px;
}
.color_option{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.color_option_color{
  border-radius: 5px;
  box-shadow:4px 4px 1px lightgray
}

.primary{
  margin:40px auto;
}
.shadow{
  box-shadow:-2px -2px 1px lightgray
}
.text_shadow{
  text-shadow: 2px 2px 1px lightgray;
}

.section{
  width: 90%;
  margin:10px auto;
}

.section_title{
  margin: 4px auto;
}
.time_wrap{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  margin: 4px auto;
}
input{
  background: white;
  border: 1px solid #d7d8d7;
  border-radius: 5px;
  text-align: right;
  padding: 0px 5px;
  width: 60%;
}
.alarm_wrap{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}