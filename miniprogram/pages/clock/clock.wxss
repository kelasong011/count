/* miniprogram/pages/clock/clock.wxss */

.preview{
  font-size: 20px;
  padding: 10px 20px;
  margin: 20px auto;
}
.color_section{
  width: 90%;
}
.color_wrap{
  margin:10px auto;
}
.color_options{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.color_title{
  margin-bottom: 8px;
}
.color_option{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.color_option_color{
  border-radius: 5px;
  box-shadow:4px 4px 1px lightgray
}

.primary{
  margin:40px auto;
}
.shadow{
  box-shadow:-2px -2px 1px lightgray
}
.text_shadow{
  text-shadow: 2px 2px 1px lightgray;
}